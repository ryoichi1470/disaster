<p id="notice"><%= notice %></p>

<h1>Shelters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Capacity</th>
      <th>Facilities</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shelters.each do |shelter| %>
      <tr>
        <td><%= shelter.name %></td>
        <td><%= shelter.address %></td>
        <td><%= shelter.capacity %></td>
        <td><%= shelter.facilities %></td>
        <td><%= shelter.latitude %></td>
        <td><%= shelter.longitude %></td>
        <td><%= link_to 'Show', shelter %></td>
        <td><%= link_to 'Edit', edit_shelter_path(shelter) %></td>
        <td><%= link_to 'Destroy', shelter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

